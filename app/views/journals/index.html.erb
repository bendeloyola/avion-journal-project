
<div class="container">
  <div class="row">

    <div class="col-md-8">
      <div class="row">   
      
        <% @journals.each do |journal| %>
        <div class="col-md-6">
          <div class="card mt-3">
            <div class="card-body">
              <h3><%= link_to journal.title, journal_path(journal.id), class: 'text-info' %></h3>
              
              <%= link_to "View", journal_path(journal.id), class: 'btn btn-info text-light' %>
            </div>
          </div>
        </div>
        <% end %>
      </div>  
    </div>

    <div class="col-md-4">

      <div class="card mt-3">
        <div class="card-header">
          Categories
        </div>

        <div class="card-body">
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to "All", journals_path %>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to "Today", journals_path(:date => Date.today) %>
            </li>
            <% @categories.each do |category| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= link_to category.name, journals_path(:cate => category.id) %>
                <span class="badge bg-primary rounded-pill"><%= category.journals.count%></span>
              </li>
            <% end %>
          </ul>
          

          
        </div>
      </div>
      
    </div>

  </div>
</div>


  






