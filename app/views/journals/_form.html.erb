<div class="flex-row d-flex justify-content-center">

  <div class="col-md-8">
    <div class="card mt-5">
      <div class="card-body">
        <%= form_with model: @journal, local: true do |f|%>

        <div class="form-group mb-3">
          <%= f.label :title%>
          <%= f.text_field :title, class: 'form-control'%>
        </div>

        <div class="form-group mb-3">
          <%= f.label :content%>
          <%= f.text_area :content, class: 'form-control'%>
        </div>

        <div class="form-group mb-3">  
          <%= f.select :category_id, Category.all.map {|c|[c.name, c.id]}, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">  
          <%= f.number_field :user_id, value: current_user.id, class: 'form-control' %>
        </div>
        

          <%= f.submit "Create Journal", class: 'btn btn-outline-primary' %>
          <%= link_to "Back", journals_path, class: 'btn btn-outline-secondary' %>
        <% end  %>
      </div>
    </div>
  </div>
 
  
</div>
