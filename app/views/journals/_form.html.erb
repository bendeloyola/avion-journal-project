<div class="flex-row d-flex justify-content-center">

  <div class="col-md-8">
    <div class="card mt-5">
      <div class="card-body">
        <%= form_with model: @journal, local: true do |f|%>

        <div class="form-group mb-3">
          <%= f.label :title%>
          <%= f.text_field :title, class: 'form-control'%>
        </div>

        <div class="form-group mb-3">
          <%= f.label :content%>
          <%= f.text_area :content, class: 'form-control'%>
        </div>

        <div class="form-group mb-3">  
          <%= f.label 'Category' %>
          <%= f.select :category_id, current_user.categories.map {|c|[c.name, c.id]}, {}, { class: 'form-select form-select-md mb-3'} %>
        </div>

        <div class="form-group mb-3">  
          <%= f.number_field :user_id, id: :journal_user_id, value: current_user.id, type: :hidden %>
        </div>
        <div class="form-group mb-3">  
          <%= f.label 'Deadline' %>
          <%= f.date_field :deadline, class: 'form-control'  %>
        </div>

          <%= f.submit "Create Journal", class: 'btn btn-outline-primary' %>
          <%= link_to "Back", journals_path, class: 'btn btn-outline-secondary' %>
        <% end  %>
      </div>
    </div>
  </div>
 
  
</div>
